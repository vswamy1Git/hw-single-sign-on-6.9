%h2 All Movies

= form_tag movies_path, method: :get, id: 'ratings_form' do
  = hidden_field_tag "sort", @sort
  Include:
  - @all_ratings.each do |rating|
    .form-check.form-check-inline
      = label_tag "ratings[#{rating}]", rating, class: 'form-check-label'
      = check_box_tag "ratings[#{rating}]", "1",  @selected_ratings.include?(rating), class: 'form-check-input'
  = submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary'
  
%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class=>@header_hilite["title"]}= link_to "Movie Title", movies_path(:sort=>:title,:ratings=>@selected_ratings_hash),id: :title_header
      %th Rating
      %th{:class=>@header_hilite["release_date"]}= link_to "Release Date", movies_path(sort: :release_date,:ratings=>@selected_ratings_hash), id: :release_date_header      
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td
          = movie.title
        %td
          = movie.rating
        %td
          = movie.release_date
        %td
          = link_to "More about #{movie.title}", movie_path(movie)
= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary'

